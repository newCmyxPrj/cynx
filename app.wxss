/**app.wxss**/
.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0rpx 0rpx;
  box-sizing: border-box;
} 

/* 字体部分 */
.PingFangSC-Light {
    font-family:  PingFangSC-Light, sans-serif;
}

.PingFangSC-Regular {
    font-family:  PingFangSC-Regular, sans-serif;

}

.PingFangSC-Semibold {
    font-family: PingFangSC-Semibold , sans-serif;
}

.PingFangSC-Medium {
    font-family: PingFangSC-Medium , sans-serif;
}

.bgGray {
      background-color: #f5f5f5;
  }
  
.flex-row
{
  width: 100%;
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
}
.flex-column
{
  width: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.flex-row-between
{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  box-sizing: border-box;
}
.flex-row-around
{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  box-sizing: border-box;
  flex-wrap: wrap;
}

.one-line-with-dot
{
  word-break: break-all;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:1;
  text-overflow:ellipsis;
  overflow: hidden;
}
.two-line-with-dot
{
  word-break: break-all;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  text-overflow:ellipsis;
  overflow: hidden;
}