.swiper-container
{
  width: 100%;
  height: 760rpx;
}
.swiper-item
{
  width: 750rpx;
  height: 760rpx;
}
.swiper-item-container
{
  width: 750rpx;
  height: 760rpx;
  position: relative;
}
.indicator-view
{
  position: absolute;
  z-index: 2;
  bottom: 50rpx;
  right: 30rpx;
  background-color: #aaa;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  color: #fff;
  font-size: 20rpx;
}
.title-name
{
  margin-top: 50rpx;
  color: #333;
  font-size: 32rpx;
  padding-left: 30rpx;
  width: 700rpx;
}
.price-item-container
{
  display: flex;
  padding-left: 30rpx;
  height: 100rpx;
  line-height: 100rpx;
  align-items: center;
  border-bottom: 10rpx solid #eee;
}
.price
{
  color: #f42c90;
  font-size: 48rpx;
}
.price-dan-wei
{
  margin-left:20rpx; 
    color: #f42c90;
  font-size: 24rpx;
}
.info1
{
  margin-left:30rpx;
  color:#aaa;
  font-size: 24rpx; 
}
.origin-price
{
  display: flex;
  position: relative;
  margin-left: 20rpx;
}
.origin-price-text
{
  height: 32rpx;
  line-height: 32rpx;
  color: #aaa;
  font-size: 24rpx;
}


.origin-line
{
  z-index: 2;
  position: absolute;
  width: 100%;
  background-color: #aaa;
  height: 3rpx;
  top: 50%;
}

/* 
  color: #f42c90;
 */
.goods-detail-title
{
  color: #333;
  font-size: 28rpx;
  padding: 30rpx 30rpx;

}

.li-ji-dui-huan
{
  z-index: 10;
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  background-color: #f42c90;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  height: 98rpx;
  line-height: 98rpx;
}
.detail-image
{
  width: 750rpx;
}

.show-remove-focus-popup {
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 4;
  position: fixed;
}

.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.2);
  z-index: 5;
}
.pop-content
{
  position: absolute;
  bottom: 0rpx;
  z-index: 7;
  width: 100%;
  height: 388rpx;
  background-color:#fff;
  box-sizing: border-box;
  display: flex;
  flex-direction: column; 
}
.pop-title
{
  width:128rpx;
height:32rpx;
font-size:32rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(51,51,51,1);
line-height:32rpx;
margin-left: 30rpx;
margin-top:30rpx;

}
.pop-price{
  margin-left: 30rpx;
  margin-top:20rpx;
  margin-bottom: 50rpx;
  width:132rpx;
  height:40rpx;
  background-color:rgba(244,44,144,1);
  border-radius:20rpx;
  text-align: center;
  line-height: 40rpx;
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
}


.person-num-container {
  margin-top: 10rpx;
  width: 750rpx;
  height: 100rpx;
  background: rgba(255, 255, 255, 1);
  display: flex;
  position: relative;
  align-items: center;
}

.person-num-container .num-pre {
  line-height: 100rpx;
  margin-left: 30rpx;
  font-size: 32rpx;
  font-family: PingFang-SC-Medium;
  color: rgba(34, 34, 34, 1);
}

.buy-num-container {
  width: 164rpx;
  height: 48rpx;
  line-height: 48rpx;
  position: absolute;
  right: 30rpx;
  display: flex;
  font-size: 24rpx;
  text-align: center;
  box-sizing: border-box;
}

.buy-num-container .jian-btn {
  width: 48rpx;
  height: 100%;
  border-left: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
  border-top: 1rpx solid #ccc;
  border-bottom-left-radius: 6rpx;
  border-top-left-radius: 6rpx;
}

.buy-num-container .goods-buy-num {
  width: 68rpx;
  height: 100%;
  border-left: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
  border-top: 1rpx solid #ccc;
  border-right: 1rpx solid #ccc;
  border-bottom-left-radius: 6rpx;
  border-top-left-radius: 6rpx;
  color: #666;
}

.jian-btn.disabled {
  background-color: #f5f5f9;
  border-left: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  border-top: 1rpx solid #eee;
  color: #ccc;
}

.jia-btn.disabled {
  background-color: #f5f5f9;
  border-left: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  border-top: 1rpx solid #eee;
  color: #ccc;
}

.buy-num-container .jia-btn {
  width: 48rpx;
  height: 100%;
  border-right: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
  border-top: 1rpx solid #ccc;
  border-bottom-right-radius: 6rpx;
  border-top-right-radius: 6rpx;
}
