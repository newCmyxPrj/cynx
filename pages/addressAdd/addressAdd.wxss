/* pages/addressAdd/addressAdd.wxss */

.address-container
{
  width: 100%;
  height: 100%;
  position: fixed;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  font-size:28rpx;
  color: #333; 
  background-color: #f5f5f5;

}
.bg_item
{
  width: 100%;
  height: 20rpx;
  background-color: #f5f5f5;
}
.item-container
{
  width: 100%;
  height: 94rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #f5f5f5;
  background-color: #fff;
}
.left-part
{
  margin-left: 30rpx;
  width: 200rpx;
}
.right-part
{
  flex: 1;
}
.right-arrow
{
  height: 94rpx;
  width: 20rpx;
  background-size: 14rpx auto;
  background-repeat: no-repeat;
  background-position: right;
  margin-right: 56rpx;
    background-image: url("https://cdn.it120.cc/images/weappshop/arrow-right.png");
}

.select-icon
{
  background-size: 32rpx 32rpx;
  background-repeat: no-repeat;
  background-position: left;
  width: 60rpx;
  height: 94rpx;
  line-height: 94rpx;
  margin-left: 30rpx;
}
.iconselectstyle
{
  background-image: url("https://img.hbunion.com/upload/wx/img/wx/checkbox_selected.png");
}

.icon_unselect_style
{
  background-image: url("https://img.hbunion.com/upload/wx/img/wx/checkbox_unselected.png");
}
.tips
{
  color: #999;
  font-size: 24rpx;
}
.btn_conatainer
{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  position: fixed;
  bottom: 0rpx;
}
.save-btn
{
  color: #fff;
  font-size: 30rpx;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background-color: #F42C90;
}

.show-popup{
  position: fixed;
  top: 0;
  left: 0;
  width:100%;
  height: 100%;
  z-index: 4;
}
.popup-mask{
  position: fixed;
  top: 0;
  left: 0;
  width:100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 5;
}
.popup-contents{
  position: fixed;
  left: 0;
  bottom: 0;
  width:100%;
  background-color: #fff;
  z-index: 6;
  color: #000;
  font-size: 30rpx;
}
.popup-contents .title
{
  display: flex;
  width: 100%;
  height: 150rpx;
  font-size: 40rpx;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 30rpx 30rpx;
}

.show-remove-focus-popup {
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 4;
  position: fixed;
}

.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.2);
  z-index: 5;
}

.popup-contents {
  position: fixed;
  left: 0;
  top: 30%;
  width: 90%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  background-color: #fff;
  z-index: 6;
  color: #000;
  font-size: 30rpx;
  margin-left: 5%;
}