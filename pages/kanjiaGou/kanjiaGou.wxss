text-align: center;
line-height: 52rpx;
font-size:30rpx;
font-family:PingFang-SC-Medium;
font-weight:500;
color:rgba(255,255,255,1);
}

.me-too-kan-jia
{
  margin-left: 30rpx;
  margin-top: 50rpx;

  width:690rpx;
height:80rpx;
background:rgba(243,194,58,1);
border-radius:40rpx;

text-align: center;
line-height: 80rpx;
