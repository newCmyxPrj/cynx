  font-size: 28rpx;
}
.line-style
{
  width: 140rpx;
  height: 2rpx;
  background-color: #fff;
}
.goods-container
{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  margin-top: 30rpx;
}
.goods-item
{
  margin-left: 35rpx;
  width: 330rpx;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  margin-bottom: 60rpx;
}
.goods-img
{
  width: 330rpx;
  height: 380rpx;
  background-color: #eee;
}
.goods-name
{
  margin-top: 20rpx;
margin-left: 30rpx;
  width:300rpx;
height:28rpx;
