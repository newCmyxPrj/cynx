/* pages/kanjiaGou/kanjiaGou.wxss */

.scroll-container
{
  width: 100%;
  height: 100%;
box-sizing: border-box;
  position: absolute;
  z-index: 1;
background:linear-gradient(116deg,rgba(245,69,72,1) 0%,rgba(242,157,58,1) 100%);
}
.kan-jia-info
{
  position: relative;
  margin-top: 100rpx;
  margin-left: 30rpx;
  width: 690rpx;
  height: 430rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 1;
}
.image-icon
{
  position: absolute;
  width:96rpx;
height:96rpx;
border-radius:50%; 
background-color: #eee;
z-index: 2;
top:-48rpx;
}
.user-name
{
  margin-top: 60rpx;
height:32rpx;
font-size:32rpx;
font-family:PingFang-SC-Medium;
font-weight:500;
color:rgba(34,34,34,1);
line-height:32rpx;
}
.tips-1
{
height:30px;
font-size:30rpx;
font-family:PingFang-SC-Medium;
font-weight:500;
color:rgba(170,170,170,1);
line-height:30px;
}
.bottom-info-contianer
{
  padding-top: 30rpx;
  display: flex;
  width: 100%;
}

.kan-jia-image
{
  margin-left: 30rpx;
  width:140rpx;
  height:192rpx;
  background-color: #eee;
}
.info-container
{
  display: flex;
  flex-direction: column;
}

.info-1
{
  margin-left: 30rpx;
height:32rpx;
font-size:32rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(51,51,51,1);
line-height:32rpx;
}

.item-second-line-container {
  margin-left: 30rpx;
  margin-top: 20rpx;
  display: flex;
}

.item-price {
  height: 32rpx;
  line-height: 32rpx;
  color: #fc2490;
  font-size: 28rpx;
}

.origin-price {
  display: flex;
  position: relative;
  margin-left: 20rpx;
}

.origin-price-text {
  height: 32rpx;
  line-height: 32rpx;
  color: #aaa;
  font-size: 24rpx;
}

.sailed-text {
  height: 32rpx;
  line-height: 32rpx;
  color: #aaa;
  margin-top: 6rpx;
  font-size: 20rpx;
}

.origin-line {
  z-index: 2;
  position: absolute;
  width: 100%;
  background-color: #aaa;
  height: 3rpx;
  top: 50%;
}
.kan-yi-dao
{
  margin-top: 40rpx;
  margin-left: 30rpx;
  width:140rpx;
height:52rpx;
background:rgba(243,107,155,1);
