
.login-mask {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background-color:#f5f5f5;
}

.login-bind {
    clear: both;
    margin-top: 20rpx;
    position: relative;
}
.login-bind .bind-input-view {
    background-color: #fff;
}

.login-bind-cell {
    height: 108rpx;
    line-height: 108rpx;
    vertical-align: middle;
}

.login-bind-content {
    padding: 0 20rpx;
    border-bottom: solid 2rpx #EDEDEd;
}

.login-bind-content input {
    width: 100%;
}

.input-common {
    height: 108rpx;
    background: #fff;
    vertical-align: middle;
}

.place-class {
    font-size: 28rpx;
    color: #999;
}

.get-msg {
    justify-content: center;
    padding: 0 20rpx;
}

.get-msg input{
    flex: 2.5;
}
.get-msg-btn {
    flex: 1;
    margin-left: 20rpx;
    background: #FFF;
    font-size: 24rpx;
    color: #999;
    text-align: center;
    line-height: 108rpx;
}
.get-msg-btn .get-msg-line {
    height: 34rpx;
    width: 100%;
    text-align: center;
    line-height: 34rpx;
    vertical-align: middle;
    border-left: #999 solid 2rpx;
    margin-top: 36rpx;
}

.btn-common {
    height: 74rpx;
    border-radius: 3px;
    line-height: 74rpx;
    text-align: center;
    font-size: 32rpx;
    vertical-align: middle;
}

.login-mask .sure-btn {
    background: #999;
    color: #FFF;
    margin: 104rpx 30rpx 46rpx;
}

.login-mask .login-weixin {
    margin: 0rpx 30rpx;
    background-color: #fff;
}
.login-mask .login-weixin image{
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
}