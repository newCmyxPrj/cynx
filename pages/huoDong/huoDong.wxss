.my-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0rpx 0rpx;
  box-sizing: border-box;
  position: fixed;
  background-color: #f3f3f3;
}

/* pages/huoDong/huoDong.wxss */

.focus-type-container {
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  color: #000;
  font-size: 28rpx;
  position: fixed;
  background-color: #fff;
  padding: 0rpx 60rpx;
  z-index: 3;
}

.focus-type-container .left-part {
  flex: 1;
  height: 70rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  position: relative;
}

.focus-type-container .middle-part {
  width: 0rpx;
  height: 46rpx;
  background-color: #c0a369;
}

.focus-type-container .right-part {
  position: relative;
  flex: 1;
  height: 70rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.select-color {
  color: #f42c90;
}

.title-select {
  width: 80rpx;
  height: 2rpx;
  position: absolute;
  background-color: #f42c90;
  bottom: 5rpx;
}

.miao-sha-item {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  padding: 30rpx 30rpx;
}

.item-content-1 {
  display: flex;
  justify-content: space-between;
}

.miao-sha-time {
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
}

.dai-shi-yong {
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 94, 0, 1);
  line-height: 40rpx;
}

.item-content-2 {
  padding-top: 30rpx;
  display: flex;
}

.icon-pic {
  width: 148rpx;
  height: 148rpx;
}

.middle-info {
  display: flex;
  flex-direction: column;
}

.info-1 {
  width: 500rpx;
  margin-left: 30rpx;
  margin-top: 20rpx;
  height: 28rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(85, 85, 85, 1);
  line-height: 28rpx;
  display: flex;
  justify-content: space-between;
}

.info-name {
  width: 400rpx;
}

.info-2 {
  margin-left: 30rpx;
  margin-top: 20rpx;
  height: 30rpx;
  font-size: 30rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(34, 34, 34, 1);
  line-height: 30rpx;
}

.item-second-line-container {
  margin-left: 30rpx;
  margin-top: 10rpx;
  display: flex;
}

.item-price {
  height: 32rpx;
  line-height: 32rpx;
  color: #fc2490;
  font-size: 28rpx;
}

.origin-price {
  display: flex;
  position: relative;
  margin-left: 20rpx;
}

.origin-price-text {
  height: 32rpx;
  line-height: 32rpx;
  color: #aaa;
  font-size: 24rpx;
}

.sailed-text {
  height: 32rpx;
  line-height: 32rpx;
  color: #aaa;
  margin-top: 6rpx;
  font-size: 20rpx;
}

.origin-line {
  z-index: 2;
  position: absolute;
  width: 100%;
  background-color: #aaa;
  height: 3rpx;
  top: 50%;
}


.shi-yong-container {
  position: relative;
  height: 80rpx;
}

.shi-yong-button {
  position: absolute;
  right: 0rpx;
  margin-top: 30rpx;

  width: 162rpx;
  height: 58rpx;
  border-radius: 8rpx;
  border: 1px solid rgba(255, 83, 0, 1);
  text-align: center;
  line-height: 58rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 94, 0, 1);
}
.scroll-container
{
  width: 100%;
  height: 100%;
box-sizing: border-box;
  position: absolute;
  z-index: 1;
  padding-top:100rpx;
}