/* pages/cardList/cardList.wxss */

.my-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0rpx 0rpx;
  box-sizing: border-box;
  position: fixed;
  background-color: #f3f3f3;
}

.card-container {
  margin-left: 30rpx;
  margin-top: 30rpx;
  width: 690rpx;
  height: 300rpx;
  background: linear-gradient(46deg, rgba(41, 36, 38, 1) 0%, rgba(59, 57, 77, 1) 100%);
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
}

.card-line-1-container {
  display: flex;
  justify-content: space-between;
  height: 120rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  align-items: center;
}

.head-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #fff;
}

.card-info-middle {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  font-size: 32rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  line-height: 32rpx;
}
.card-info-right{
height:44rpx;
font-size:32rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(211,189,122,1);
line-height:44rpx;
}
.card-name
{
  margin-top: 50rpx;
  margin-left: 50rpx;
height:38rpx;
font-size:38rpx;
font-family:PingFangSC-Medium;
font-weight:500;
color:rgba(255,255,255,1);
line-height:38rpx;
letter-spacing:1rpx;
}
.hui-yuan
{
    margin-left: 50rpx;
  margin-top: 20rpx;
  height:28rpx;
  font-size:28rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(238,238,238,1);
  line-height:28rpx;
  letter-spacing:1rpx;
}
