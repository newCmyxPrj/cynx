/* pages/consumerDetails/consumerDetails.wxss */

.search-bg
{
  z-index: 2;
  position: fixed;
  top: 0rpx;
  background-color: #eee;
  width: 100%;
  height: 100rpx;
  display: flex;
}
.search
{
  width: 720rpx;
  margin-left: 15rpx;
  color: #b2b2b2;
  font-size: 24rpx;
  background-color: #fff;
  border-radius:10rpx; 
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 20rpx;
}
.consume-record-item
{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 30rpx;
  border-bottom: 8rpx solid #eee;
}
.record-item-left-part
{
  display: flex;
  flex-direction: column;
}

.left-content
{
  color: #999;
  font-size: 28rpx;
}
.left-content-time
{
  margin-top: 12rpx;
  color: #999;
  font-size: 20rpx;
}

.right-content-price
{
  color: #f42c90;
  font-size: 28rpx;
}
.cutter
{
  margin-left:30rpx; 
  color: #b2b2b2;
  font-size: 24rpx;
}