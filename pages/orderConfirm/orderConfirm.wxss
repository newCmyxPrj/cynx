}
.confirm-item
{
  border-top: 2rpx solid #eee;
  align-items: center;
  display: flex;
  position: fixed;
  bottom: 0rpx;
  z-index: 2;
  height: 100rpx;
  font-size: 32rpx;
  justify-content: space-between;
  width: 100%;
