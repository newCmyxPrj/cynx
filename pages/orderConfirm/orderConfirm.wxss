.express-item
{
  width: 720rpx;
  color: #333;
  font-size: 32rpx;
    display: flex;
  justify-content: space-between;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  padding-left: 0rpx;
  padding-right: 30rpx;
  box-sizing: border-box;
  margin-left: 30rpx;
  border-bottom: 2rpx solid #eee; 
}
.right-arrow
{
  width: 16rpx;
  height: 28rpx;
}
.goods-item
{
  width: 100%;
  display: flex;
  box-sizing: border-box;
  justify-content: space-between;
  padding: 30rpx 30rpx;

height:244rpx;
background:rgba(249,249,247,1);
}

.goods-image
{
  width: 184rpx;
  height: 184rpx;
}
.goods-name
{
    margin-left:30rpx; 

