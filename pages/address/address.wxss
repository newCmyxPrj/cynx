@import '../../template/addressCell/addressCell.wxss';

.con-bg {
    width: 100%;
    height: 2000rpx;
}
.none-goods {
    text-align: center;
}

.none-goods image{
    width: 238rpx;
    height: 166rpx;
    margin-top: 200rpx;
}

.none-goods .address-font{
    margin-top: 25rpx;
    font-size: 24rpx;
    color: #999;
    letter-spacing: 0.12px;
}

.add-address {
    background-color: #F02C90;
    width: 100%;
    position: fixed;
    bottom: 0rpx;
    height: 92rpx;
    line-height: 92rpx;
    font-size: 30rpx;
    color: #FFF;
    letter-spacing: 0.3px;    
    border: none;
    padding: 0;
    text-align: center;
}

.findPhone {
    position: absolute;
    left: 30rpx;
    right: 30rpx;
    top: 30%;
    height: 240rpx;
    background: #fff;
    z-index: 666;
}

.findPhone-header {
    font-size: 28rpx;
    text-align: center;
    line-height: 40rpx;
}

.findPhone-content  .findPhone-address {

    background: #C0A369;
    font-size: 36rpx;
    color: #FFF;
    letter-spacing: 0.3px;    
    border: none;
    padding: 0;
    text-align: center;
    line-height: 92rpx;
    width: 100%;
    height: 92rpx;
    margin-top: 40rpx;
}