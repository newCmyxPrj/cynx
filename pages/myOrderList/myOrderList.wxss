.container{
    width: 100%;
    background-color: #F2f2f2;
}
.status-box{
    width:100%;
    height: 88rpx;
    line-height: 88rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #fff;
}
.status-box .status-label{
    width: 150rpx;
    height: 100%;
    text-align: center;
    font-size:28rpx;
    color:#999;
    box-sizing: border-box;
    position: relative;
}
.status-box .status-label .active{
    color:#F42C90;
    padding-bottom: 15rpx;
    border-bottom: 6rpx solid #F42C90;
}
.status-box .status-label .red-dot{
    width: 16rpx;
    height: 16rpx;
    position: absolute;
    left: 116rpx;
    top:23rpx;
    background-color: #f43530;
    border-radius: 50%;
}
.no-order{
    width: 100%;
    position: absolute;
    bottom: 0;
    top: 88rpx;
    left: 0;
    right: 0;
    text-align: center;
    padding-top: 203rpx;
    background-color: #F2f2f2;
}
.no-order-img{
    width: 81rpx;
    height: 96rpx;
    margin-bottom: 31rpx;
}
.no-order .text{
    font-size:28rpx;
    color:#999999;
    text-align: center
}
.all-order-list-container
{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.all-order-list-item
{
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  position: relative;
}
.all-order-list-item .head-part
{
  display: flex;
  width: 100%;
  height: 104rpx;
  border-bottom: 2rpx solid #eee;
  align-items: center;
}
.all-order-list-item .head-part .head-icon
{
  width: 64rpx;
  height: 64rpx;
  background-color: #eee;
  border-radius: 50%;
  margin-left: 60rpx;
}
.head-info-container
{
  margin-left: 30rpx;
}
.all-order-list-item .name
{
  color: #333;
  font-size: 24rpx;
}
.all-order-list-item .rank
{
  color: #999;
  font-size: 22rpx;
}
.all-order-list-item .status
{
  color: #999;
  font-size: 28rpx;
  position: absolute;
  right: 0rpx;
  margin-right: 28rpx;
}
.all-order-list-item .middle-part
{
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx 60rpx;
  border-bottom: 2rpx solid #eee;
}
.all-order-list-item .middle-part .project-name
{
  color: #222;
  font-size: 30rpx;
}

.item-price-container
{
  display: flex;
  align-items: center;
}

.item-price-container .item-price
{
  height: 32rpx;
  line-height: 32rpx;
  color: #222;
  font-size: 28rpx;
}
.item-price-container .origin-price
{
  display: flex;
  position: relative;
  margin-left: 20rpx;
}

.item-price-container .origin-price-text
{
  height: 32rpx;
  line-height: 32rpx;
  color: #aaa;
  font-size: 24rpx;
}

.item-price-container .origin-price .origin-line
{
  z-index: 2;
  position: absolute;
  width: 100%;
  background-color: #aaa;
  height: 3rpx;
  top: 40%;
}
.bottom-part
{
  color: #222;
  font-size: 28rpx;
  height: 88rpx;
  display: flex;
  justify-content: flex-end;
  padding-right: 50rpx;
  align-items: center;
  border-bottom: 10rpx solid #eee;
}
.bottom-part .value{
  position: absolute;
}
.ping-lun-btns-container
{
  height: 120rpx;
  display: flex;
  justify-content: flex-end;
  width: 100%;
  box-sizing: border-box;
  align-items: center;
}
.delete-order
{
  padding: 10rpx 20rpx;
  border: 1rpx solid #bcbcbc;
  color: 666;
  font-size: 24rpx;
  border-radius: 8rpx;
}
.go-to-pin-lun
{
  margin-left: 30rpx;
  margin-right: 30rpx;
  padding: 10rpx 20rpx;
  border: 1rpx solid #F42C90;
  color: #F42C90;
  font-size: 24rpx;
    border-radius: 8rpx;
}


