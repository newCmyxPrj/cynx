/* pages/comment/comment.wxss */

.container {
  position: fixed;
  background-color: #f3f3f3;
}

.commit-btn {
  margin-top: 10rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: right;
  color: #f43c90;
  font-size: 32rpx;
  padding-right: 50rpx;
  background-color: #fff;
}

.comment1-description {
  margin-top: 5rpx;
  width: 100%;
  box-sizing: border-box;
  line-height: 53rpx;
  display: flex;
  flex-direction: row;
  height: 90rpx;
  align-items: center;
  background-color: #fff;
}

.comment1-description1 {
  font-size: 28rpx;
  color: #555;
  margin-left: 30rpx;
}

.comment1-end-color {
  color: #666;
}

.star-pos {
  margin-left: 30rpx;
}

.star-icon {
  z-index: 1;
  width: 63rpx;
  height: 53rpx;
  background-image: url("https://img.hbunion.com/upload/wx/img/wx/star_select.png");
  background-size: 53rpx 53rpx;
  background-position: center center;
  background-repeat: no-repeat;
}
.comment1-description .star-pos  .star-unselect{
    z-index: 2;
    background-image: url("https://img.hbunion.com/upload/wx/img/wx/star_unselect.png");
    width: 63rpx;
    height: 53rpx;
    background-size: 53rpx 53rpx;
    background-position: center center;
    background-repeat: no-repeat;
}
.selected-comment-container
{
  width: 100%;
  display: flex;
  box-sizing: border-box;
  flex-wrap: wrap;
  margin-top: 10rpx;
  background-color: #fff;
  padding: 30rpx 30rpx;
}
.comment-item-selected
{
  border: 2rpx solid #f43c90;
  border-radius:80rpx;
  color: #f43c90;
  font-size: 28rpx; 
  padding: 10rpx 20rpx;
  margin-left: 30rpx;
  margin-top: 20rpx;
}

.comment-item-unselected
{
  border: 2rpx solid #999;
  border-radius:80rpx;
  color: #888;
  font-size: 28rpx; 
  padding: 10rpx 20rpx;
  margin-left: 30rpx;
  margin-top: 20rpx;
}
.comment-container
{
  background-color: #fff;
  margin-top: 10rpx;
  padding: 30rpx 30rpx;
  color: #333;
  width: 100%;
  box-sizing: border-box;
  font-size: 28rpx;

}
.camera-btn
{
  width: 162rpx;
  height: 162rpx;
  margin-top: 50rpx;
  background-color: #888;
}
