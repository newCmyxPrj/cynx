/* pages/yuYueRecord/yuYueRecord.wxss */
.scroll-container
{
  width: 100%;
  height: 100%;
box-sizing: border-box;
  position: absolute;
  z-index: 1;
  padding-top:20rpx;
  background-color: #f5f5f5;
}

.title-select {
  width: 80rpx;
  height: 2rpx;
  position: absolute;
  background-color: #f42c90;
  bottom: 5rpx;
}

.miao-sha-item {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  padding: 30rpx 30rpx;
}

.item-content-1 {
  display: flex;
  justify-content: space-between;
}

.miao-sha-time {
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
}

.dai-shi-yong {
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #F42C90;
  line-height: 40rpx;
}

.item-container
{
  position: relative;
  display: flex;
  width: 100%;
  box-sizing: border-box;
  height: 180rpx;
  align-items: center;
}

.image-icon
{
  width: 136rpx;
  height: 136rpx;
  border-radius: 50%;
  background-color: #eee;
  margin-left: 30rpx;
}
.info-container
{
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
}
.name
{
  color: #333;
  font-size: 32rpx;
}
.rank
{
  color: #999;
  font-size: 24rpx;
  margin-left: 10rpx;
}
.service-count
{
  color: #999;
  font-size: 24rpx;
}

.item-price
{
  height: 32rpx;
  line-height: 32rpx;
  color: #FC2490;
  font-size: 28rpx;
}
.origin-price
{
  display: flex;
  position: relative;
  margin-left: 20rpx;
}
.origin-price-text
{
  height: 32rpx;
  line-height: 32rpx;
  color: #aaa;
  font-size: 24rpx;
}
.origin-line
{
  z-index: 2;
  position: absolute;
  width: 100%;
  background-color: #aaa;
  height: 3rpx;
  top: 50%;
}
.item-second-line-container
{
  margin-top:10rpx; 
  display: flex;
}
.right-part-container
{
  position: absolute;
  right: 40rpx;
  display: flex;
  flex-direction: column;
}
.yuyue
{
  width: 150rpx;
  height: 52rpx;
  line-height: 52rpx;
  text-align: center;
  border-radius: 32rpx;
  background-color: #FC2490;
  color: #fff;
  font-size: 24rpx;
}
.dashan
{
  margin-top: 14rpx;
  width: 150rpx;
  height: 52rpx;
  line-height: 52rpx;
  text-align: center;
  border-radius: 32rpx;
  background-color: #fff;
  border: 2rpx solid #999;
  color: #999;
  font-size: 24rpx;
}
.mendian-container
{
  display: flex;
  justify-content: space-around;
  font-size: 30rpx;
  color: #333;
  line-height: 60rpx;
}

::-webkit-scrollbar-thumb {
  background-color: rgba(0, 0, 0, 0.1);
}

::-webkit-scrollbar {
  width: 4rpx;
  background-color: #eee;
}
